<div class="navbar navbar-default" role="navigation">
  <div class="container-fluid">
    <!-- 連結 -->
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-right"  id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to "#" do %>
              購物車 <i class="fa fa-shopping-cart"></i> ( <%= current_cart.products.count %> )
            <% end %>
          </li>
          <li class="active">
            <%= link_to("商品列表", products_path) %>
          </li>
        </ul>
        <% if !current_user %>
          <li><%= link_to("註冊", new_user_registration_path)%><li>
          <li><%= link_to(content_tag(:i, "登入", class: "fa fa-sign-in"), new_user_session_path) %><li>
        <% else %>
          <li class="dropdown">
            <a herf="#" class="dropdown-toggle" data-toggle="dropdown">
              Hi, <%= current_user.email  %>
              <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <!-- 管理員後台判斷權限 -->
              <% if current_user.admin? %>
                <li>
                  <%= link_to("管理後台", admin_products_path) %>
                </li>
              <% end %>
              <li><%= link_to(content_tag(:i, "登出", class: "fa fa-sign-out"), destroy_user_session_path, method: :delete) %></li>
            </ul>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
